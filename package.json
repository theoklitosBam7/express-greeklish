{
  "name": "express-greeklish",
  "version": "1.0.0",
  "private": true,
  "description": "Express API for converting Greeklish to Greek with spell checking",
  "author": {
    "name": "theoklitosBam7",
    "email": "th.bampouris@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "express",
    "greeklish",
    "greek",
    "spell-checking"
  ],
  "main": "dist/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "node --env-file=.env --import tsx ./index.ts",
    "dev:watch": "tsx watch --env-file=.env ./index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node --env-file=.env dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "benchmark": "node --import tsx scripts/benchmark.ts",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "express": "^5.2.1",
    "greek-utils": "^1.3.0",
    "hunspell-spellchecker": "^1.0.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/express": "^5.0.6",
    "@types/greek-utils": "^1.2.2",
    "@types/hunspell-spellchecker": "^1.0.2",
    "@types/node": "^22.19.9",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
